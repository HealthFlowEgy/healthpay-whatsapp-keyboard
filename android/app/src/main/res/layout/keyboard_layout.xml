<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/keyboard_background">

    <!-- Wallet Panel -->
    <LinearLayout
        android:id="@+id/wallet_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:visibility="gone"
        android:background="@drawable/card_background">

        <!-- Balance Display -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/balance_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/wallet_balance"
                android:textSize="14sp"
                android:textColor="@color/text_secondary" />

            <TextView
                android:id="@+id/balance_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00 EGP"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/primary" />

            <ImageButton
                android:id="@+id/refresh_balance"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/refresh_balance"
                android:src="@android:drawable/ic_popup_sync" />
        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:spacing="8dp">

            <Button
                android:id="@+id/btn_send_money"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="@string/send_money"
                android:textSize="12sp"
                android:background="@drawable/button_primary" />

            <Button
                android:id="@+id/btn_request_money"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="@string/request_money"
                android:textSize="12sp"
                android:background="@drawable/button_secondary"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Quick Amount Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:spacing="8dp">

            <Button
                android:id="@+id/quick_amount_50"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="@string/quick_amount_50"
                android:textSize="11sp"
                android:background="@drawable/button_secondary" />

            <Button
                android:id="@+id/quick_amount_100"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="@string/quick_amount_100"
                android:textSize="11sp"
                android:background="@drawable/button_secondary"
                android:layout_marginStart="8dp" />

            <Button
                android:id="@+id/quick_amount_500"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="@string/quick_amount_500"
                android:textSize="11sp"
                android:background="@drawable/button_secondary"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Additional Actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:spacing="8dp">

            <Button
                android:id="@+id/btn_share_link"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="@string/share_link"
                android:textSize="11sp"
                android:background="@drawable/button_secondary" />

            <Button
                android:id="@+id/btn_topup"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="@string/topup"
                android:textSize="11sp"
                android:background="@drawable/button_secondary"
                android:layout_marginStart="8dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Keyboard Keys Container -->
    <FrameLayout
        android:id="@+id/keyboard_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
